{
	"compilerOptions": {
		"removeComments": false,
		"strictNullChecks": true,
		"removeComments": false,
		"declaration": true,
		"noImplicitAny": false,
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true,
		"preserveConstEnums": true,
		"moduleResolution": "node",
		"target": "es5",
		"types": [
			"node"
		],
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es6"
		]
	},
	"formatCodeOptions": {
		"indentSize": 2,
		"tabSize": 2
	},
	"files": [
		"src/reducer.ts",
		"test/index.ts"
	]
}
